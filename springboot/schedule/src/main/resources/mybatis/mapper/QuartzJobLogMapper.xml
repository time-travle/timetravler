<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.joven.schedule.mapper.QuartzJobLogMapper">

    <resultMap type="org.joven.schedule.entity.QuartzJobLogEntity" id="quartzJobLogMap">
        <result property="id" column="id"/>
        <result property="jobId" column="job_id"/>
        <result property="jobName" column="job_name"/>
        <result property="className" column="class_name"/>
        <result property="beanName" column="bean_name"/>
        <result property="params" column="params"/>
        <result property="status" column="status"/>
        <result property="error" column="error"/>
        <result property="times" column="times"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <!-- 删除N天前的数据 -->
    <delete id="deleteLongAgo" parameterType="java.lang.Integer">
        DELETE FROM schedule_user.quartz_job_log where datediff(curdate(), create_date)>=#{days}
    </delete>


</mapper>